<div class="blog-post">
    <h2 class="blog-post-title"><%= link_to blog.title.upcase, blog %></h2>
    <p class="blog-post-meta">Published <%= distance_of_time_in_words(blog.created_at, Time.now) %> ago</p>
    <% if logged_in?(:site_admin) %>
    <p class="blog-post-meta btn-group">
        <%= link_to blog.status.capitalize, toggle_status_blog_path(blog), class: "btn btn-sm btn-outline-info"%>
        <%= link_to 'Edit', edit_blog_path(blog), class: "btn btn-sm btn-outline-warning" %>
        <%= link_to 'Delete post', blog, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-sm btn-outline-danger" %>
    </p>
    <% end %>
    <p><%= blog.body %></p>
</div><!-- /.blog-post -->
