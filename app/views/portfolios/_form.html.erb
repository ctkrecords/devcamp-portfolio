<%= form_for(portfolio_item) do |form| %>
<% if portfolio_item.errors.any? %>
  <% portfolio_item.errors.full_messages.each do |error| %>
    <%= js add_gritter(error, title: "CTK Records Portfolio", sticky: false) %>
  <% end %>
<% end %>
<div class="row">
  <div class="col-6">
    <div class="form-group">
      <%= form.label :title %>
      <%= form.text_field :title, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :subtitle %>
      <%= form.text_field :subtitle, class: "form-control" %>
    </div>

    <div class="form-group">
      <label class="btn btn-dark">
          Upload a main image file<%= form.file_field :main_image, style: 'display: none' %>
      </label>
        
    </div>

    <div class="form-group">
      <label class="btn btn-dark">
          Upload a thumb image file<%= form.file_field :thumb_image, style: 'display: none' %>
      </label>  
    </div>

  </div>
  <div class="col-6">
    <div class="form-group">
      <%= form.label :body %>
      <%= form.text_area :body, class: "form-control", rows: 10 %>
    </div>
  </div>
</div>


<div class="col-12">
  <hr>
  <h4>Technologies used:</h4>

  <div>
    <%= form.fields_for :technologies do |tech_form| %>
     <%= render 'technology_fields', f: tech_form %>
    <% end %>
    <div>
      <%= link_to_add_association 'Add Technology', form, :technologies %>
    </div>
  </div>

  <div class="form-group">
    <%= form.submit "Save portfolio item", class: "btn btn-primary" %>
    <%= link_to  "Back", portfolios_path, class: "btn btn-info" %>
  </div>
</div>

<% end %>