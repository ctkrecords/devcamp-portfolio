<h2><%= link_to portfolio_item.title, portfolio_show_path(portfolio_item) %></h2>
    <p><%= portfolio_item.subtitle %></p>
    <p><%= portfolio_item.body %></p>
    <%= image_tag portfolio_item.thumb_image unless portfolio_item.thumb_image.nil? %>
    <br>
    <%= link_to 'Edit', edit_portfolio_path(portfolio_item) if logged_in?(:site_admin) %>
    |
    <%= link_to 'Delete Portfolio Item', portfolio_path(portfolio_item), method: :delete, data: {confirm: "Are you sure on remove #{portfolio_item.title}?"} if logged_in?(:site_admin) %>