<div class="col-md-4">
    <div class="card mb-4 shadow-sm" data-id="<%= portfolio_item.id %>">
        <!--{% include icons/placeholder.svg width="100%" height="225" background="#55595c" color="#eceeef" class="card-img-top" text="Thumbnail" %}-->
        <%= image_tag portfolio_item.thumb_image unless portfolio_item.thumb_image.nil? %>
        <div class="card-body">
            <p class="card-text">
                <span><%= link_to portfolio_item.title, portfolio_show_path(portfolio_item) %></span>
                <%= portfolio_item.subtitle %>
            </p>
            <div class="d-flex justify-content-between align-items-center">
                <% if logged_in?(:site_admin) %>
                <div class="btn-group">
                        <%= link_to 'Delete Portfolio Item', portfolio_path(portfolio_item), method: :delete, data: {confirm: "Are you sure on remove #{portfolio_item.title}?"}, class: 'btn btn-sm btn-outline-secondary'  %>
                        <%= link_to 'Edit', edit_portfolio_path(portfolio_item), class: 'btn btn-sm btn-outline-secondary' %>
                        <!--button type="button" class="btn btn-sm btn-outline-secondary">Edit</button-->
                    </div>
                <% end %>
                <!--small class="text-muted">9 mins</small-->
            </div>
        </div>
    </div>
</div>
