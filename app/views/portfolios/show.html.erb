<div class="container">
    <div class="row">
        <div class="col-md-7">
            <%= image_tag @portfolio_item.main_image %>
        </div>
        <div class="col-md-5">
            <h1><%= @portfolio_item.title %></h1>
            <%= link_to  "Back", portfolios_path, class: "btn btn-secondary" %>
            <hr>
            <em><%= @portfolio_item.title %></em>
            <p><%= @portfolio_item.body %></p>
            <hr>
            <h3>Technologies Used: </h3>

            <% @portfolio_item.technologies.each do |t| %>
            <ul>
                <li><%= t.name %></li>
            </ul>
            <% end %>
        </div>
    </div>
</div>
