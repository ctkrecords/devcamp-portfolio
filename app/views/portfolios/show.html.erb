<div class="container pt-3">
    <div class="row">
        <div class="col-md-7">
            <%= image_tag portfolio_img(@portfolio_item.main_image.url, 'main'), class: 'img-fluid' %>
        </div>
        <div class="col-md-5">
            <h1><%= @portfolio_item.title %></h1>
            <%= link_to  "Back", portfolios_path, class: "btn btn-secondary" %>
            <% if logged_in?(:site_admin) %>
            <%= link_to  "Edit", edit_portfolio_path(@portfolio_item), class: "btn btn-warning" %>
            <% end %>
            <hr>
            <em><%= @portfolio_item.subtitle %></em>
            <p><%= @portfolio_item.body %></p>
            <hr>
            <h3>Technologies Used: </h3>

            <% @portfolio_item.technologies.each do |t| %>
            <ul>
                <li><%= t.name %></li>
            </ul>
            <% end %>
        </div>
    </div>
</div>
