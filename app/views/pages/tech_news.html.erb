<main role="main" class="inner cover">
    <h1 class="cover-heading text-center">Tech News</h1>
    <div class="row">
        <% @tweets.each do |tweet| %>
            <div class="col-md-6">
                <div class="tech-news">
                    <div class="card text-dark">
                        <%= tweet %>
                    </div>
                </div>
            </div>
        <% end %>
    </div>
</main>
 